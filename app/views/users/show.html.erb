<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  has made <%= @user.ratings.size %> ratings, average <%= @user.average_rating %>
  <br>
  member of <% @user.beer_clubs.each do |bc| %> <%= link_to bc.name, beer_club_path(bc) %> <% end %>
  <br>
  favorite beer: <%= @user.favorite_beer %>
  <br>
  favorite style: <%= @user.favorite_style %>
  <br>
  favorite brewery: <%= @user.favorite_brewery %>
</p>

<p><strong>ratings</strong></p>

<ul>
  <% @user.ratings.each do |rating| %>
      <li>
        <%= rating.to_s %>
        <% if @user == current_user %>
        <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
      </li>
  <% end %>
</ul>

<% if @user == current_user %>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>