

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><% if user.iced %><span class="label label-info">account frozen</span><% end %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'SignUp', signup_path unless current_user %>
