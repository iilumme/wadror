<p id="notice"><%= notice %></p>

<p>
  <h2><%= @beer_club.name %> <%= @beer_club.city %></h2>
</p>

<p>
  <i>Founded <%= @beer_club.founded%></i>
</p>

<% if @beer_club.members.any? %>
    <p><strong>Members</strong></p>
    <ul>
      <% @beer_club.members.each do |user| %>
          <li><%= link_to user.username, user_path(user) %> </li>
      <% end %>
    </ul>
<% else %>
    <p>There are no members</p>
<% end %>


<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user  %>
<%= link_to 'Destroy', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>